block content
  h1= title
  
  - let items = results

  div(class="container-fluid mt-4")
    div(class="row") 
      each item in results
        div(class="col-md-4 mb-4")
          div(class="card h-100")
            div(class="card-body")
              h5(class="card-title") Name: #{item.name}
              p(class="card-text") Category: #{item.category}
              p(class="card-text") Price: #{item.price}
              div(class="d-flex justify-content-between align-items-center mt-3")
                a(href="/product/detail/?id=" + item.id, class="btn btn-sm btn-primary") Detail
                a(href="/product/update/?id="+ item.id, class="btn btn-sm btn-success") Update
                a(href="/product/delete/?id="+ item.id, class="btn btn-sm btn-danger") Delete