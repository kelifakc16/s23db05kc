extends layout

block content
  h1= title
  p Number of rows #{query.rows}
  p Number of columns #{query.cols}

  

  - 
    const rows = Number(query.rows);
    const cols = Number(query.cols);
  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Query parameters must be integers.
  - else if (rows < 1 || rows > 10)
    p Rows must be between 1 and 10.
  - else if (cols < 1 || cols > 10)
    p Columns must be between 1 and 10.
  - else
    table#outer 
        - for(let i = 0; i < rows; i++) {
            tr#middle 
                - for(let j = 0; j < cols; j++) {
                    -if(i==j){
                        td(style="background-color: yellow;padding: 10px;")= (1) 
                        -}                 
                    - else if(i==j-1){
                        td(style="background-color: green;padding: 10px;")= (i)
                        -}
                    - else if(i==j+1){
                        td(style="background-color: blue;padding: 10px;")= (2)
                        -}
                    -else {
                        td(style="padding: 10px;")= (0)
                        -}
                - }
        - }